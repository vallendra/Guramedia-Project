<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hehe.kyky.guramedia" >
    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <activity
            android:label="@string/app_name"
            android:name=".SplashScreen"
            android:screenOrientation="portrait"
            android:noHistory="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>



        <activity
            android:name="com.hehe.kyky.guramedia.LoginActivity"
            android:label="Login to your Account" >
        </activity>

        <activity
            android:name=".List"
            android:label="Guramedia - Booklist">
        </activity>


        <!--  Entry for RegisterActivity.class -->
        <activity
            android:name="com.hehe.kyky.guramedia.RegisterActivity"
            android:exported="true"
            android:label="Register New Account">

        </activity>

        <activity android:name=".AddActivity"
            android:label="Add a book"/>
        <activity android:name=".ProfileActivity"
            android:label="Book's data"/>
        <activity android:name=".EditActivity"
            android:label="Edit a book's data">
        </activity>
    </application>

</manifest>